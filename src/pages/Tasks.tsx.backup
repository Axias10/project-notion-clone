                          <SelectTrigger className="h-8 text-xs">
                            <SelectValue />
                          </SelectTrigger>
                          <SelectContent>
                            <SelectItem value="todo">ğŸ“ Ã€ faire</SelectItem>
                            <SelectItem value="in-progress">ğŸš§ En cours</SelectItem>
                            <SelectItem value="done">âœ… TerminÃ©</SelectItem>
                          </SelectContent>
                        </Select>
                        <Button
                          size="sm"
                          variant="destructive"
                          onClick={() => handleDeleteTask(task.id)}
                        >
                          ğŸ—‘ï¸
                        </Button>
                      </div>
                    </CardContent>
                  </Card>
                ))}
              </div>
            </div>
          );
        })}
      </div>
    </div>
  );
}
